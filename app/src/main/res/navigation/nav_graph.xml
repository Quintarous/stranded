<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/chatPageFragment">

    <fragment
        android:id="@+id/chatPageFragment"
        android:name="com.example.stranded.chatpage.ChatPageFragment"
        android:label="ChatPageFragment" >
        <action
            android:id="@+id/action_chatPageFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_chatPageFragment_to_nav_graph_power_on"
            app:destination="@id/nav_graph_power_on" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.stranded.settings.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settingsFragment_to_chatPageFragment"
            app:destination="@id/chatPageFragment" />
    </fragment>

    <navigation android:id="@+id/nav_graph_power_on"
        app:startDestination="@id/powerOnFragment">
        <fragment
            android:id="@+id/settingsFragment"
            android:name="com.example.stranded.settings.SettingsFragment"
            android:label="SettingsFragment">
            <action
                android:id="@+id/action_settingsFragment_to_powerOnFragment"
                app:destination="@id/powerOnFragment" />
        </fragment>
        <fragment
            android:id="@+id/powerOnFragment"
            android:name="com.example.stranded.startup.PowerOnFragment"
            android:label="PowerOnFragment">
            <action
                android:id="@+id/action_powerOnFragment_to_chatPageFragment"
                app:destination="@id/chatPageFragment" />
            <action
                android:id="@+id/action_powerOnFragment_to_settingsFragment2"
                app:destination="@id/settingsFragment" />
        </fragment>
    </navigation>
</navigation>